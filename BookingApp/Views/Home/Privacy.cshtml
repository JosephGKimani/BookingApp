@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>


<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Hotel Policies</h1>
        <div class="accordion" id="hotelPoliciesAccordion">
            <!-- Check-In and Check-Out Policy -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingCheckIn">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCheckIn" aria-expanded="true" aria-controls="collapseCheckIn">
                        Check-In and Check-Out Policy
                    </button>
                </h2>
                <div id="collapseCheckIn" class="accordion-collapse collapse show" aria-labelledby="headingCheckIn" data-bs-parent="#hotelPoliciesAccordion">
                    <div class="accordion-body">
                        <ul>
                            <li>Check-in time: 3:00 PM</li>
                            <li>Check-out time: 11:00 AM</li>
                            <li>Early check-in and late check-out are subject to availability and may incur additional charges.</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Cancellation Policy -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingCancellation">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCancellation" aria-expanded="false" aria-controls="collapseCancellation">
                        Cancellation Policy
                    </button>
                </h2>
                <div id="collapseCancellation" class="accordion-collapse collapse" aria-labelledby="headingCancellation" data-bs-parent="#hotelPoliciesAccordion">
                    <div class="accordion-body">
                        <ul>
                            <li>Free cancellation up to 48 hours before check-in.</li>
                            <li>50% charge for cancellations within 48 hours of check-in.</li>
                            <li>No-shows will be charged 100% of the booking amount.</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Pet Policy -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingPetPolicy">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePetPolicy" aria-expanded="false" aria-controls="collapsePetPolicy">
                        Pet Policy
                    </button>
                </h2>
                <div id="collapsePetPolicy" class="accordion-collapse collapse" aria-labelledby="headingPetPolicy" data-bs-parent="#hotelPoliciesAccordion">
                    <div class="accordion-body">
                        <ul>
                            <li>Pets are allowed in designated rooms only. Advance notice is required.</li>
                            <li>A non-refundable pet fee of $50 per stay is applicable.</li>
                            <li>Guests are responsible for cleaning up after their pets and any damages caused.</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Smoking Policy -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingSmokingPolicy">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSmokingPolicy" aria-expanded="false" aria-controls="collapseSmokingPolicy">
                        Smoking Policy
                    </button>
                </h2>
                <div id="collapseSmokingPolicy" class="accordion-collapse collapse" aria-labelledby="headingSmokingPolicy" data-bs-parent="#hotelPoliciesAccordion">
                    <div class="accordion-body">
                        <ul>
                            <li>This is a non-smoking hotel.</li>
                            <li>Smoking is allowed only in designated outdoor areas.</li>
                            <li>A $250 cleaning fee will be charged for smoking in rooms.</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Payment Policy -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingPaymentPolicy">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePaymentPolicy" aria-expanded="false" aria-controls="collapsePaymentPolicy">
                        Payment Policy
                    </button>
                </h2>
                <div id="collapsePaymentPolicy" class="accordion-collapse collapse" aria-labelledby="headingPaymentPolicy" data-bs-parent="#hotelPoliciesAccordion">
                    <div class="accordion-body">
                        <ul>
                            <li>We accept all major credit cards, debit cards, and cash.</li>
                            <li>Payment is due at the time of check-in.</li>
                            <li>For reservations over $500, a valid photo ID is required.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-light text-center text-lg-start mt-5">
        <div class="text-center p-3">
            © 2025 HotelFinder. All Rights Reserved.
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>


