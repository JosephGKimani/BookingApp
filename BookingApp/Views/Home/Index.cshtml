@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Listings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Explore Our Hotels</h1>

        <!-- Carousel -->
        <div id="hotelCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#hotelCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#hotelCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#hotelCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://digital.ihg.com/is/image/ihg/holiday-inn-berlin-6018486884-4x3" class="d-block w-100" style="width: 100vw; height: auto;" alt="Luxury Hotel">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Luxury Hotel</h5>
                        <p>Experience the ultimate luxury and comfort at our premium hotel.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="https://images.trvl-media.com/lodging/1000000/290000/281700/281608/1e99ac96.jpg?impolicy=resizecrop&rw=575&rh=575&ra=fill" class="d-block w-100" style="width: 100vw; height: auto;" alt="Beachside Resort">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Beachside Resort</h5>
                        <p>Relax by the sea and enjoy stunning ocean views at our resort.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="https://digital.ihg.com/is/image/ihg/holiday-inn-express-berlin-5506570084-4x3" class="d-block w-100" style="width: 100vw; height: auto;" alt="City Center Hotel">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>City Center Hotel</h5>
                        <p>Stay in the heart of the city and explore all major attractions.</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#hotelCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#hotelCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <!-- Cards -->
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <img src="https://digital.ihg.com/is/image/ihg/holiday-inn-berlin-6018486884-4x3" class="card-img-top" alt="Luxury Hotel">
                    <div class="card-body">
                        <h5 class="card-title">Luxury Hotel</h5>
                        <p class="card-text">Experience the ultimate luxury and comfort at our premium hotel.</p>
                        <a href="#" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://cf.bstatic.com/xdata/images/hotel/max500/86558434.jpg?k=f9c9c27e866980ffb4c2940704497ab0411b740791a318666fbf56a5527926f3&o=&hp=1" class="card-img-top" alt="Beachside Resort">
                    <div class="card-body">
                        <h5 class="card-title">Beachside Resort</h5>
                        <p class="card-text">Relax by the sea and enjoy stunning ocean views at our resort.</p>
                        <a href="#" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://www.thehotelguru.com/_images/da/3b/da3b59f172bfdcc70238694ca4331711/600x422.jpg" class="card-img-top" alt="City Center Hotel">
                    <div class="card-body">
                        <h5 class="card-title">City Center Hotel</h5>
                        <p class="card-text">Stay in the heart of the city and explore all major attractions.</p>
                        <a href="#" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://foto.hrsstatic.com/fotos/0/2/1600/916/80/000000/http%3A%2F%2Ffoto-origin.hrsstatic.com%2Ffoto%2F3%2F9%2F8%2F3%2F398327%2F398327_a_29212325.jpg/Phm0SBa8NclM3OafUGP8QA%3D%3D/2449%2C1625/6/Hoenow_Landhaus-Hoppegarten-Aussenansicht-1-398327.jpg" class="card-img-top" alt="Boutique Hotel">
                    <div class="card-body">
                        <h5 class="card-title">Boutique Hotel</h5>
                        <p class="card-text">Enjoy a unique and personalized stay at our boutique hotel.</p>
                        <a href="#" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://cdn.britannica.com/96/115096-050-5AFDAF5D/Bellagio-Hotel-Casino-Las-Vegas.jpg" class="card-img-top" alt="Business Hotel">
                    <div class="card-body">
                        <h5 class="card-title">Business Hotel</h5>
                        <p class="card-text">Perfect for business travelers with modern amenities and meeting spaces.</p>
                        <a href="#" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://cf.bstatic.com/xdata/images/hotel/max1024x768/620719916.webp?k=616cefe723433fd501f4fe89c7f415ce49822b10d769c7a725f8e35b39be66af&o=" class="card-img-top" alt="Family-Friendly Hotel">
                    <div class="card-body">
                        <h5 class="card-title">Family-Friendly Hotel</h5>
                        <p class="card-text">A cozy retreat for families with kid-friendly amenities and activities.</p>
                        <a href="#" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-light text-center text-lg-start mt-5">
        <div class="text-center p-3">
            © 2025 HotelFinder. All Rights Reserved.
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
