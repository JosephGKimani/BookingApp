@model BookingApp.Models.Room

<h2>Are you sure you want to delete this room?</h2>

<p>
    <strong>Room Type:</strong> @Model.RoomType <br />
    <strong>Check-in Date:</strong> @Model.checkin.ToShortDateString() <br />
    <strong>Check-out Date:</strong> @Model.checkout.ToShortDateString() <br />
</p>

<form asp-action="DeleteRoom" asp-controller="Room" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Rooms" class="btn btn-secondary">Cancel</a>
</form>
